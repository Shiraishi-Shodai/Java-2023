			System.out.println("体格は肥満度２です");
		}else if(bmi<40) {
			System.out.println("体格は肥満度３です");
		}else {
			System.out.println("体格は肥満度４です");
		}

		
		System.out.println("標準体重は"+(int)pra.WeightCheck(bm2,weight)+"kgです ");	


